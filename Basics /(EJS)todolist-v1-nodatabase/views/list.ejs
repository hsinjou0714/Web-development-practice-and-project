<!DOCTYPE html>

<%- include('header'); -%> <!-- EJS to have header.ejs file display  -->>

<body>
    <div class="box" id="heading">
        <h1><%= ListTitle %></h1>
    </div>
    <!--a  template to take information from app.js and place it in here -->
    <div class="box">

        <% for (let i = 0; i < newListItems.length; i++) { %>
        <div class="item">
            <input type="checkbox">
            <p><%= newListItems[i] %></p>
        </div>
        <% } %>

        <form class = "item" action="/" method="POST">
            <input type="text" id="newItem" name="userAddList" placeholder="New Item" autocomplete="off">
            <button type="submit" name = "ItemAddbutton" value= <%= ListTitle %> >+</button>
            <!-- set the button name, and make value EJS, listTitle, now when item is added, you will now where it is add in  -->
        </form>
    </div>
    <script src="" async defer></script>
</body>

<%- include('footer'); -%> <!-- EJS to have header.ejs file display  -->>

</html>
